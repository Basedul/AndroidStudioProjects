<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView_list_item_layout_id"
        android:layout_width="112dp"
        android:layout_height="92dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="54dp"
        android:layout_marginTop="19dp"
        app:srcCompat="@android:drawable/alert_dark_frame"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="54dp" />

    <TextView
        android:id="@+id/textView_title_list_item_layout_id"
        android:layout_width="102dp"
        android:layout_height="29dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="103dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:layout_alignParentRight="true"
        android:layout_marginRight="103dp" />

    <TextView
        android:id="@+id/textView_description_list_item_layout_id"
        android:layout_width="154dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView_title_list_item_layout_id"
        android:layout_marginTop="64dp"
        android:text="TextView"
        android:layout_alignLeft="@+id/textView_title_list_item_layout_id" />
</RelativeLayout>